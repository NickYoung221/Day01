<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme1" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- 设置没有ActionBar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <!-- mydefStyleAttr是在attrs.xml定义过的 -->
        <item name="mydefStyleAttr">@style/mydefStyleAttr</item>
    </style>

    <style name="mydefStyleRes">
        <item name="mycolor">#000000</item>
    </style>

    <style name="mydefStyleAttr">
        <item name="mycolor">#00ff00</item>
    </style>

    <!-- 优先级顺序：设置在控件里（即在控件里设置style="@style/mystyle"）
    》 设置在activity里（即在配置文件里设置activity的属性：android:theme="@style/myActicity"）
    》 设置在application里（即在配置文件里设置application的属性：android:theme="@style/myApplication"）-->
    <style name="mystyle" parent="AppTheme">
        <item name="android:textColor">#ff0000</item>
        <item name="android:textSize">20dp</item>
    </style>
    <style name="myApplication">
        <item name="android:textColor">#00ff00</item>
        <item name="android:textSize">30dp</item>
    </style>
    <style name="myActivity">
        <item name="android:textColor">#0000ff</item>
        <item name="android:textSize">40dp</item>
    </style>

    <!--LoadingView用到的Style-->
    <style name="custom_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.6</item>
    </style>

</resources>
