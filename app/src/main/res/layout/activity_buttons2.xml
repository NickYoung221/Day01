<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yang.day01.Buttons2Activity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="关于JSON"
        android:id="@+id/btn_toJson"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="网络通信get-post"
        android:id="@+id/btn_ToNet"
        android:layout_below="@+id/btn_toJson"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="异步任务AsyncTask"
        android:id="@+id/btn_ToAsyncTask"
        android:layout_below="@+id/btn_ToNet"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Volley框架"
        android:id="@+id/btn_ToMyVolley"
        android:layout_below="@+id/btn_ToAsyncTask"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="xUtils框架"
        android:id="@+id/btn_ToMyXUtils"
        android:layout_below="@+id/btn_ToMyVolley"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SharedPreferences"
        android:id="@+id/btn_toSharedPreferences"
        android:layout_alignTop="@+id/btn_toJson"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="15dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="SQLite数据库操作"
        android:id="@+id/btn_toSQLite"
        android:layout_below="@+id/btn_ToMyXUtils"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Broadcast  Receiver"
        android:id="@+id/btn_toBroadcastReceiver"
        android:layout_alignTop="@+id/btn_ToNet"
        android:layout_alignLeft="@+id/btn_toSharedPreferences"
        android:layout_alignStart="@+id/btn_toSharedPreferences" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="三级缓存机制"
        android:id="@+id/btn_toLoadImage"
        android:layout_alignTop="@+id/btn_ToAsyncTask"
        android:layout_alignLeft="@+id/btn_toBroadcastReceiver"
        android:layout_alignStart="@+id/btn_toBroadcastReceiver" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="service"
        android:id="@+id/btn_toService"
        android:layout_alignTop="@+id/btn_ToMyVolley"
        android:layout_alignLeft="@+id/btn_toLoadImage"
        android:layout_alignStart="@+id/btn_toLoadImage" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ContentProvider"
        android:id="@+id/btn_toContactInfo"
        android:layout_alignTop="@+id/btn_ToMyXUtils"
        android:layout_alignLeft="@+id/btn_toService"
        android:layout_alignStart="@+id/btn_toService" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="动画animation"
        android:id="@+id/btn_toAnimation"
        android:layout_alignBottom="@+id/btn_toSQLite"
        android:layout_alignLeft="@+id/btn_toContactInfo"
        android:layout_alignStart="@+id/btn_toContactInfo" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="自定义View"
        android:id="@+id/btn_toCustomView"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="10dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
