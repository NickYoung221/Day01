<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.yang.day01.MainActivity">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50dp"
        android:textColor="#0000ff"
        android:text="Hello World!"
        android:id="@+id/tv" />

    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:text="点击返回上一层"
        android:background="#ff00ff"
        android:textSize="30dp"
        android:textColor="#00ff00"
        android:id="@+id/btn_return"
        android:layout_marginTop="20dp"
        android:layout_below="@+id/et_sentdToMyActivity"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="用户名"
        android:id="@+id/tv_2"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/tv"
        android:layout_alignEnd="@+id/tv"
        android:layout_marginBottom="48dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/et_sentdToMyActivity"
        android:hint="输入要传给MyActivity的值"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="10dp"
        android:layout_below="@+id/tv" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To"
        android:layout_marginLeft="240dp"
        android:id="@+id/btn_sendToMyActivity"
        android:layout_alignBottom="@+id/et_sentdToMyActivity" />

    <Button
        android:layout_width="350dp"
        android:layout_height="120dp"
        android:text="点击改变字体颜色"
        android:textSize="40dp"
        android:id="@+id/btn_clickToChange"
        android:layout_below="@+id/btn_return"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:textColor="@drawable/textcolor"
        />

</RelativeLayout>
