<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yang.day01.ButtonsActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮A"
        android:textSize="30dp"
        android:id="@+id/btn_A"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮B"
        android:textSize="30dp"
        android:id="@+id/btn_B"
        android:layout_below="@+id/btn_A"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="按钮C"
        android:textSize="30dp"
        android:id="@+id/btn_C"
        android:layout_below="@+id/btn_B"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sdCard操作"
        android:textSize="20dp"
        android:id="@+id/btn_sdCard"
        android:layout_below="@+id/btn_C"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="30dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="这里显示点击的按钮信息"
        android:textSize="30dp"
        android:id="@+id/tv_click"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="360dp"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="to  DialogActivity"
        android:id="@+id/btn_toDialogActivity"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/tv_click"
        android:layout_alignEnd="@+id/tv_click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击弹出通知"
        android:id="@+id/btn_Notification"
        android:layout_marginTop="60dp"
        android:layout_alignLeft="@+id/btn_toDialogActivity"
        android:layout_alignStart="@+id/btn_toDialogActivity" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击取消通知"
        android:id="@+id/btn_cancel"
        android:layout_marginTop="120dp"
        android:layout_alignLeft="@+id/btn_Notification"
        android:layout_alignStart="@+id/btn_Notification" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To  PopupWindow"
        android:id="@+id/btn_PopupWindow"
        android:layout_marginTop="180dp"
        android:layout_alignLeft="@+id/btn_cancel"
        android:layout_alignStart="@+id/btn_cancel" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To  Toolbar"
        android:id="@+id/btn_Toolbar"
        android:layout_marginTop="240dp"
        android:layout_alignLeft="@+id/btn_PopupWindow"
        android:layout_alignStart="@+id/btn_PopupWindow" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To  DrawerLayout"
        android:id="@+id/btn_DrawerLayout"
        android:layout_marginTop="300dp"
        android:layout_alignLeft="@+id/btn_Toolbar"
        android:layout_alignStart="@+id/btn_Toolbar" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TO  FirstFragment"
        android:id="@+id/btn_firstFragment"
        android:layout_marginTop="400dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To DyncFragment"
        android:id="@+id/btn_dyncFragment"
        android:layout_alignBottom="@+id/btn_firstFragment"
        android:layout_alignLeft="@+id/btn_DrawerLayout"
        android:layout_alignStart="@+id/btn_DrawerLayout" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To Fragments"
        android:id="@+id/btn_toFragmentsActivity"
        android:layout_marginTop="460dp"
        android:layout_alignLeft="@+id/tv_click"
        android:layout_alignStart="@+id/tv_click" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="To  Buttons2"
        android:id="@+id/btn_toBtns2"
        android:layout_alignBottom="@+id/btn_toFragmentsActivity"
        android:layout_toRightOf="@+id/btn_toFragmentsActivity"
        android:layout_toEndOf="@+id/btn_toFragmentsActivity"
        android:layout_marginLeft="3dp"/>
    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/to_interesting"
        android:text="interesting"
        android:layout_alignBottom="@+id/btn_toFragmentsActivity"
        android:layout_toRightOf="@+id/btn_toBtns2"
        android:layout_marginLeft="3dp"/>

</RelativeLayout>
