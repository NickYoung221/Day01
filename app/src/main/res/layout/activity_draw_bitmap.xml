<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.yang.customview.DrawBitmapActivity">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击缩放"
        android:id="@+id/btn_changeScale"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="点击旋转"
        android:id="@+id/btn_changeRotate"
        android:layout_alignBottom="@+id/btn_changeScale"
        android:layout_toRightOf="@+id/btn_changeScale"
        android:layout_toEndOf="@+id/btn_changeScale"
        android:layout_marginLeft="30dp"/>

    <com.yang.customview.mycustomview.DrawBitmapView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/drawBitmapView"
        android:layout_below="@+id/btn_changeScale"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
